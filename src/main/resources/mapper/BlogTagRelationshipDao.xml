<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fun.trip2.blog.dao.BlogTagRelationshipDao">

    <resultMap type="fun.trip2.blog.entity.BlogTagRelationship" id="BlogTagRelationshipMap">
        <result property="rId" column="r_id" jdbcType="INTEGER"/>
        <result property="tagId" column="tag_id" jdbcType="INTEGER"/>
        <result property="blogId" column="blog_id" jdbcType="INTEGER"/>
        <result property="createDate" column="create_date" jdbcType="TIMESTAMP"/>
        <result property="amendDate" column="Amend_date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BlogTagRelationshipMap">
        select
          r_id, tag_id, blog_id, create_date, Amend_date
        from blog.tbl_blog_tag_relationship
        where r_id = #{rId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BlogTagRelationshipMap">
        select
          r_id, tag_id, blog_id, create_date, Amend_date
        from blog.tbl_blog_tag_relationship
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BlogTagRelationshipMap">
        select
          r_id, tag_id, blog_id, create_date, Amend_date
        from blog.tbl_blog_tag_relationship
        <where>
            <if test="rId != null">
                and r_id = #{rId}
            </if>
            <if test="tagId != null">
                and tag_id = #{tagId}
            </if>
            <if test="blogId != null">
                and blog_id = #{blogId}
            </if>
            <if test="createDate != null">
                and create_date = #{createDate}
            </if>
            <if test="amendDate != null">
                and Amend_date = #{amendDate}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="rId" useGeneratedKeys="true">
        insert into blog.tbl_blog_tag_relationship(tag_id, blog_id, create_date, Amend_date)
        values (#{tagId}, #{blogId}, #{createDate}, #{amendDate})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update blog.tbl_blog_tag_relationship
        <set>
            <if test="tagId != null">
                tag_id = #{tagId},
            </if>
            <if test="blogId != null">
                blog_id = #{blogId},
            </if>
            <if test="createDate != null">
                create_date = #{createDate},
            </if>
            <if test="amendDate != null">
                Amend_date = #{amendDate},
            </if>
        </set>
        where r_id = #{rId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from blog.tbl_blog_tag_relationship where r_id = #{rId}
    </delete>

</mapper>