<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fun.trip2.blog.dao.BlogTagDao">

    <resultMap type="fun.trip2.blog.entity.BlogTag" id="BlogTagMap">
        <result property="tagId" column="tag_id" jdbcType="INTEGER"/>
        <result property="tagName" column="tag_name" jdbcType="VARCHAR"/>
        <result property="createDate" column="create_date" jdbcType="TIMESTAMP"/>
        <result property="amendDate" column="amend_date" jdbcType="TIMESTAMP"/>
        <result property="deleteFlag" column="delete_flag" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BlogTagMap">
        select
          tag_id, tag_name, create_date, amend_date, delete_flag
        from blog.tbl_blog_tag
        where tag_id = #{tagId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BlogTagMap">
        select
          tag_id, tag_name, create_date, amend_date, delete_flag
        from blog.tbl_blog_tag
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BlogTagMap">
        select
          tag_id, tag_name, create_date, amend_date, delete_flag
        from blog.tbl_blog_tag
        <where>
            <if test="tagId != null">
                and tag_id = #{tagId}
            </if>
            <if test="tagName != null and tagName != ''">
                and tag_name = #{tagName}
            </if>
            <if test="createDate != null">
                and create_date = #{createDate}
            </if>
            <if test="amendDate != null">
                and amend_date = #{amendDate}
            </if>
            <if test="deleteFlag != null and deleteFlag != ''">
                and delete_flag = #{deleteFlag}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="tagId" useGeneratedKeys="true">
        insert into blog.tbl_blog_tag(tag_name, create_date, amend_date, delete_flag)
        values (#{tagName}, #{createDate}, #{amendDate}, #{deleteFlag})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update blog.tbl_blog_tag
        <set>
            <if test="tagName != null and tagName != ''">
                tag_name = #{tagName},
            </if>
            <if test="createDate != null">
                create_date = #{createDate},
            </if>
            <if test="amendDate != null">
                amend_date = #{amendDate},
            </if>
            <if test="deleteFlag != null and deleteFlag != ''">
                delete_flag = #{deleteFlag},
            </if>
        </set>
        where tag_id = #{tagId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from blog.tbl_blog_tag where tag_id = #{tagId}
    </delete>

</mapper>